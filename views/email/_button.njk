{# handy macro for making buttons #}
{% macro button(url, text) %}
<table class='btn btn-primary' style=' border: 0, cellpadding: 0, cellspacing: 0'>
    <tbody>
        <tr>
            <td style='text-align: center'>
                <table style='border: 0, cellpadding: 0, cellspacing: 0'>
                    <tbody>
                        <tr>
                            <td>
                                <a href="{{url}}" target='_blank'>
                                    {{text}}
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </tbody>
</table>
{% endmacro %}