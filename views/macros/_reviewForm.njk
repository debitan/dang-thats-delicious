{% macro reviewForm(store) %}
    <form class="reviewer" action="/reviews/{{store._id}}" method="POST">
        <textarea name="text" placeholder="Did you try this place? Have something to say? Leave a review..."></textarea>
        <div class="reviewer__meta">
            <div class="reviewer__stars">
                {% set stars = [5, 4, 3, 2, 1] %}
                {% for num in stars %}
                    <input type="radio" required id="star{{num}}" name="rating" value="{{num}}">
                    <label for="star{{num}}"> {{num}} Stars </label>
                {% endfor %}
            </div>
            <input class="button" type="submit" value="Submit Review â†’">
        </div>
    </form>
{% endmacro %}